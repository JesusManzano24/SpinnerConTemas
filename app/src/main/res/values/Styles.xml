<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Tema1" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/lightBackground</item>
    </style>

    <style name="TextThemeLight">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="ButtonThemeLight">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="Tema2" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/darkBackground</item>
    </style>

    <style name="TextThemeDark">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">serif</item>
    </style>
    <style name="ButtonThemeDark">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Tema3" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/theme1Primary</item>
        <item name="colorPrimaryDark">@color/theme1Primary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/theme1Background</item>
    </style>

    <style name="TextThemeModern">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="ButtonThemeModern">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/theme1Primary</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>